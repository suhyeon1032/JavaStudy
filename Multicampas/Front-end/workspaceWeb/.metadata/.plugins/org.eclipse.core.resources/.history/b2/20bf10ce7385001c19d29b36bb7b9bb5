<!-- action : 폼이 submit발생하면 실행될 파일 명 
	 method : 데이터전송방식 get, post
	 
	 -->
<form method="post" action="aaaa.jsp?tel=010-2432-5432">
	아이디 : <input type="text" name="userid" placeholder="아이디를 입력하세요" maxlength="10"
	size="5" required/> <br/>
	
	이름 : <input type="text" name="username" value="홍길동" disabled/> <br/>
	비밀번호 : <input type="password" name="userpwd"/><br/>
	파일첨부 : <input type="file" name="filename"/><br/>
	체크박스 : <input type="checkbox" name="hobby" value="농구"/>농구
			<input type="checkbox" name="hobby" value="축구" checked/>축구
			<input type="checkbox" name="hobby" value="배구"/>배구<br>
	라디오버튼 : <input type="radio" name="email" value="yes" checked/>동의
			<input type="radio" name="email" value="no"/>비동의<br>
	여러줄의 문자 입력 : 
	<textarea name="memo" cols="50" rows="5">글을 입력하세요.</textarea><br>
	리스트 박스 : 
		<select name="language" size="4" multiple>
			<option value="java">자바</option>
			<option>자바스크립트</option>
			<option>html</option>
			<option selected>css</option>
			<option>jsp</option>
		</select> <!-- size:한번에 표시되는 목록 수, multiple:다중선택 -->
		
	리스트 group : 
		<select name="lang">
			<optgroup label="프론트엔드">
			<option>자바스크립트</option>
			<option>html</option>
			<option>css</option>
			</optgroup>
			<optgroup label="백엔드">
			<option value="java">자바</option>
			<option>jsp</option>
			</optgroup>
		</select>
	
	<hr/>
	date : <input type="date" name="date"/><br>
	datetime-local : <input type="datetime-local" name="date2"/><br>
	month : <input type="month" name="month"/><br>
	week : <input type="week" name="week"/><br/>
	
	color : <input type="color" name="color"/><br>
	<hr/>
	<!-- 전송버튼 : button, submit, image, button태그 -->
	<input type="button" value="등록">
	<input type="submit" value="등록">
	<button>등록</button>
	<input type="image" src="../img/naver.png"/>
	<input type="reset" value="다시쓰기"/>
</form>
